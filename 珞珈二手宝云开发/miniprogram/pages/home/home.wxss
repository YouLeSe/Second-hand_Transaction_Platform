

.home-container{
  width: 100%;
  height: 100%;
  background: rgb(255, 255, 255);
}

/*  搜索框  */
.home-search-bar{
  width: 100%;
  height: 50px;
  background: lightblue;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
}

.home-search-input{
  width: 100%;
  height: 100%;
  background: white;
  font-size: 14px;
  padding-left: 40px;
  box-sizing: border-box;
  display: flex;
}

.home-search-icon{
  width: 30px;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
}

/*  分类  */
.home-type{
  width: 100%;
  height: 80px;
  background: rgb(224, 224, 224);
}

/*  商品列表  */
.home-list{
  width: 100% ;
  height: 100%;
  background: rgb(255, 255, 255);
  border: 2px solid #ccc;
  border-radius: 10px;
}

.home-list-good{
  width: 100% ;
  height: 100%;
  background: lightblue;
  display: flex;
  flex-direction: row;
}

.home-list-good-head{
  width: 50px;
  height: 50px;
  border: solid 0.05rem #34b3de;
  border-radius: 50%;
  overflow: hidden;
  background-size: cover;
  background-position: 50%;
  background-color: #ddd;
  text-align: center;
}

.home-list-good-up{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  font-size: 14px;
  padding-left: 50px;
  padding-right: 10px;
  box-sizing: border-box;  
}

.home-list-good-up-name{
  padding-left: 80px;
  font-size: 18px;
}

.home-list-good-up-date{
  padding-left: 80px;
  font-size: 12px;
  color: lightgray;
}

.home-list-good-price{
  padding-left: 150px;
  font-size: 20px;
}

.home-list-good-details{
  background-color: white;
  margin-left: 70px;
  margin-right: 30px;
  letter-spacing: 1px;
  font-size: 14px;
}

.home-list-good-image{
  border: 2px solid #ccc;
  border-radius: 10px;
  box-shadow: 0px 0px 5px 2px rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 30%;
  margin-bottom: 20px;
  margin-left: 70px;
  background-color: rgb(255, 255, 255);
}

